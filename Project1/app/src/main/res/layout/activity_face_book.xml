<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.8">
    <ImageView
        android:id="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/book3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="40sp"
        android:text="FACE BOOKSTORE"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="#663300"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/addTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Address:"
        android:textColor="#000000"
        android:layout_below="@id/name"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="4dp"/>

    <TextView
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="3479 Foster St, Palo Alto, CA 94306"
        android:textColor="#000000"
        android:layout_below="@id/addTitle"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="16dp"
        />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:src="@drawable/map"
        android:layout_below="@id/addTitle"
        android:layout_toRightOf="@id/add"
        android:layout_marginTop="18dp" />

    <TextView
        android:id="@+id/contactTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Contact Us:"
        android:textColor="#000000"
        android:layout_below="@id/add"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="4dp"/>
    <TextView
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Phone number: 650-426-8293"
        android:textColor="#000000"
        android:layout_below="@id/contactTitle"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="16dp"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:src="@drawable/phone"
        android:layout_below="@id/contactTitle"
        android:layout_toRightOf="@id/contact"
        android:layout_marginTop="18dp" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Email: ivy_facebook@gmail.com"
        android:textColor="#000000"
        android:layout_below="@id/contact"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="16dp"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:src="@drawable/email"
        android:layout_below="@id/contact"
        android:layout_toRightOf="@id/email"
        android:layout_marginTop="18dp" />

    <TextView
        android:id="@+id/busTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Business Hour:"
        android:textColor="#000000"
        android:layout_below="@id/email"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="4dp"/>
    <TextView
        android:id="@+id/business"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Mon - Fri: 9:00 - 17:00"
        android:textColor="#000000"
        android:layout_below="@id/busTitle"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="16dp"/>


</RelativeLayout>
